      >
      <Label text="Bienvenue dans l'analyse de ventes"/>
      <Button text="Charger les données" />
  
      <TableView  prefHeight="400">
        <columns>
            <TableColumn text="ID"/>
            <TableColumn  text="Date"/>
            <TableColumn  text="Produit"/>
            <TableColumn  text="Catégorie"/>
            <TableColumn fx:id="colQuantity" text="Quantité"/>
            <TableColumn fx:id="colPrice" text="Prix"/>
            <TableColumn fx:id="colTotal" text="Total"/>
        </columns>
    </TableView>
    
    
</VBox>